<!-- MainContent -->
<section class="sign-in-page">
   <div class="container">
      <div class="row justify-content-center align-items-center height-self-center">
         <div class="col-lg-5 col-md-12 align-self-center">
            <div class="sign-user_card ">                    
               <div class="sign-in-page-data">
                  <div class="sign-in-from w-100 m-auto">
                     <h3 class="mb-3 text-center">Sign in</h3>
                     {# Form start #}
                     <form class="mt-4" action="home.html.twig" method="POST">
                          {% if error %}
                              <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                           {% endif %}

                           {% if app.user %}
                              <div class="mb-3">
                                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                              </div>
                           {% endif %}

                        <div class="form-group">                                 
                           <input type="email" class="form-control mb-0" id="exampleInputEmail1" placeholder="Renseignez votre Email" autocomplete="off" required>
                        </div>
                        <div class="form-group">                                 
                           <input type="password" class="form-control mb-0" id="exampleInputPassword2" placeholder="Renseignez votre mot de passe" required>
                        </div>
                         <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}">
                        
                          {#
                              Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                              See https://symfony.com/doc/current/security/remember_me.html

                              <div class="checkbox mb-3">
                                    <label>
                                       <input type="checkbox" name="_remember_me"> Remember me
                                    </label>
                              </div>
                           #}
                              <div style="background:white" class="sign-info">
                              <button type="submit"  class="btn btn-hover">Connectez-vous</button>                             
                           </div>                                    
                        
                     </form>
                     {# Form end #}
                  </div>
               </div>
               <div class="mt-3">
                  <div class="d-flex justify-content-center links">
                     Vous n'avez pas de compte? <a href="sign-up.html" class="text-primary ml-2">Inscription</a>
                  </div>
                  <div class="d-flex justify-content-center links">
                     <a href="reset-password.html" class="f-link">J'ai oubli√© mon mot de passe</a>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</section>
<!-- MainContent End-->

<!-- back-to-top End -->
 {% endblock %}