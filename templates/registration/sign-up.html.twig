{% extends 'base.html.twig' %}

    {% block title %}Brillante Media{% endblock %}
 
   {% block body %}
       {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
      <!-- loader Start -->
      <div id="loading">
         <div id="loading-center">
         </div>
      </div>

<!-- MainContent -->
<section class="sign-in-page">
   <div class="container">
      <div class="row justify-content-center align-items-center height-self-center">
         <div class="col-lg-7 col-md-12 align-self-center">
            <div class="sign-user_card ">                    
               <div class="sign-in-page-data">
                  <div class="sign-in-from w-100 m-auto">

                  <!--FORMULAIRE START-->
                     <form class="" action="home.html.twig" method="POST">
                     {{ form_start(registrationForm) }}
                        <div class="row">
                           
                           <div class="col-md-6">
                              <div class="form-group"> 
                              {{ form_row(registrationForm.lastName) }} 
                              </div>
                           </div>
                           <div class="col-md-6">
                              <div class="form-group">
                                 
                              {{ form_row(registrationForm.firstName) }}
                              </div>
                           </div>
                           <div class="col-md-6">
                              <div class="form-group">  
                               {{ form_row(registrationForm.email) }}
                              </div>
                           </div>
                           <div class="col-md-6">
                              <div class="form-group">   
                              {{ form_row(registrationForm.plainPassword)}}  
                              </div>
                           </div>
                           <div class="col-md-6">
                              <div class="form-group"> 
                                 <label>Confirmer votre mot de passe </label>                                
                                 <input type="password" class="form-control mb-0" id="exampleInputPassword2"  required>
                              </div>
                           </div>

                              <div class="col-md-6 ">
                              
                                 {{ form_row(registrationForm.agreeTerms)}} 
                                
                              
                           </div>
                           
                        </div>
                        <div class="custom-control custom-radio mt-2">
                           <input type="radio" id="customRadio1" name="customRadio" class="custom-control-input">
                           <label class="custom-control-label" for="customRadio1">Premium-$39 / 3 Months
                              with a 5 day free trial</label>
                         </div>
                         <div class="custom-control custom-radio mt-2">
                           <input type="radio" id="customRadio2" name="customRadio" class="custom-control-input">
                           <label class="custom-control-label" for="customRadio2"> Basic- $19 / 1 Month</label>
                         </div>
                         <div class="custom-control custom-radio mt-2">
                           <input type="radio" id="customRadio3" name="customRadio" class="custom-control-input">
                           <label class="custom-control-label" for="customRadio3">Free-Free</label>
                         </div>
                      
                        <button type="submit" class="btn btn-hover my-2">Enregistrer</button>
                     {{ form_end(registrationForm) }}                                       
                     </form>
                  <!--FORMULAIRE END-->

                  </div>
               </div>    
               <div class="mt-3">
                  <div class="d-flex justify-content-center links">
                     Déjà inscrit.e? <a href="login.html.twig" class="text-primary ml-2">Connectez-vous</a>
                  </div>                        
               </div>
            </div>
         </div>
      </div>
   </div>
</section>
{% endblock %}